    echo "    â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘          â–ˆâ–ˆâ•‘     â–ˆâ–ˆâ•‘  â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘  â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘ â•šâ–ˆâ–ˆâ–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘   â•šâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•â–ˆâ–ˆâ•‘ â•šâ•â• â–ˆâ–ˆâ•‘"
    echo "    â•šâ•â•â•šâ•â•          â•šâ•â•     â•šâ•â•  â•šâ•â•â•šâ•â•  â•šâ•â•â•šâ•â•  â•šâ•â•â•â•   â•šâ•â•    â•šâ•â•â•â•â•â• â•šâ•â•     â•šâ•â•"
    echo ""
    echo "                    ðŸ‘» Anonymous IP Address Changing Tool"
    echo "                    ðŸŒ Vanish & Reappear with New Identity"
    echo "=================================================================="
    echo -e "${NC}"
}

# Help function
show_help() {
    # Detect if running from global installation or local
    # Check how this script was actually called
    SCRIPT_NAME="$(basename "$0")"
    if [[ "$SCRIPT_NAME" == "ip-phantom" ]] && [[ "$0" != "./ip-phantom" ]]; then
        COMMAND="ip-phantom"
        INSTALL_STATUS="ðŸŒ Global Installation"
    else
        COMMAND="./ip-phantom"
        INSTALL_STATUS="ðŸ“ Local Installation"
    fi
    
    echo -e "${PURPLE}"
    echo "=================================================================="
    echo "                    ðŸ‘» IP PHANTOM HELP GUIDE"
    echo "=================================================================="
    echo -e "${NC}"
    echo -e "${GREEN}IP Phantom - Professional Anonymous IP Changing Tool${NC}"
    echo -e "${BLUE}$INSTALL_STATUS${NC}"
    echo ""
    echo -e "${YELLOW}ðŸ“‹ USAGE:${NC}"
    echo "  $COMMAND [OPTIONS]"
    echo ""
    echo -e "${YELLOW}âš™ï¸  CORE OPTIONS:${NC}"
    echo "  -i, --interval SECONDS    â±ï¸  Time interval between IP changes (default: 3)"
    echo "  -c, --config FILE         ðŸ“ Configuration file path (default: config.json)"
