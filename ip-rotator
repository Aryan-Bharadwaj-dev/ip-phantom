    echo "=================================================================="
    echo "    â–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—     â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—  â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— "
    echo "    â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—    â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—â–ˆâ–ˆâ•”â•â•â•â–ˆâ–ˆâ•—â•šâ•â•â–ˆâ–ˆâ•”â•â•â•â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—â•šâ•â•â–ˆâ–ˆâ•”â•â•â•â–ˆâ–ˆâ•”â•â•â•â–ˆâ–ˆâ•—â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—"
    echo "    â–ˆâ–ˆâ•‘â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•    â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•"
    echo "    â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•”â•â•â•â•     â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—"
    echo "    â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘         â–ˆâ–ˆâ•‘  â–ˆâ–ˆâ•‘â•šâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•   â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘  â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘   â•šâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•â–ˆâ–ˆâ•‘  â–ˆâ–ˆâ•‘"
    echo "    â•šâ•â•â•šâ•â•         â•šâ•â•  â•šâ•â• â•šâ•â•â•â•â•â•    â•šâ•â•   â•šâ•â•  â•šâ•â•   â•šâ•â•    â•šâ•â•â•â•â•â• â•šâ•â•  â•šâ•â•"
    echo ""
    echo "                    Cybersecurity IP Address Rotation Tool"
    echo "                    For Educational & Security Testing Purposes"
    echo "=================================================================="
    echo -e "${NC}"
}

# Help function
show_help() {
    # Detect if running from global installation or local
    # Check how this script was actually called
    SCRIPT_NAME="$(basename "$0")"
    if [[ "$SCRIPT_NAME" == "ip-rotator" ]] && [[ "$0" != "./ip-rotator" ]]; then
        COMMAND="ip-rotator"
        INSTALL_STATUS="ðŸŒ Global Installation"
    else
        COMMAND="./ip-rotator"
        INSTALL_STATUS="ðŸ“ Local Installation"
    fi
    
    echo -e "${BLUE}"
    echo "=================================================================="
    echo "                    ðŸŽ¯ IP ROTATOR HELP GUIDE"
    echo "=================================================================="
    echo -e "${NC}"
    echo -e "${GREEN}IP Rotator - Professional Cybersecurity IP Rotation Tool${NC}"
    echo -e "${BLUE}$INSTALL_STATUS${NC}"
    echo ""
    echo -e "${YELLOW}ðŸ“‹ USAGE:${NC}"
    echo "  $COMMAND [OPTIONS]"
    echo ""
    echo -e "${YELLOW}âš™ï¸  CORE OPTIONS:${NC}"
    echo "  -i, --interval SECONDS    â±ï¸  Time interval between rotations (default: 3)"
    echo "  -c, --config FILE         ðŸ“ Configuration file path (default: config.json)"
    echo "  -v, --verbose             ðŸ“Š Enable verbose logging output"
    echo "  -h, --help               â“ Show this comprehensive help message"
    echo ""
    echo -e "${YELLOW}ðŸ”§ UTILITY COMMANDS:${NC}"
    echo "  --check-ip               ðŸ“ Check current IP address and exit"
    echo "  --setup                  ðŸ› ï¸  Run interactive setup wizard"
    echo "  --stop                   ðŸ›‘ Stop all running VPN connections"
    echo "  --demo                   ðŸŽ¯ Run in demo mode (simulated IP changes)"
    echo ""
    echo -e "${YELLOW}âœ¨ QUICK START EXAMPLES:${NC}"
    echo -e "  ${GREEN}# ðŸŽ¯ Demo Mode - Perfect for presentations!${NC}"
    echo "  $COMMAND --demo --interval 5"
    echo ""
    echo -e "  ${GREEN}# ðŸš€ Basic Operations${NC}"
    echo "  $COMMAND --check-ip              # Check current IP"
    echo "  $COMMAND --interval 10           # Rotate every 10 seconds"
    echo "  $COMMAND --setup                 # Initial configuration"
    echo ""
    echo -e "  ${GREEN}# ðŸ”§ Advanced Usage${NC}"
    echo "  $COMMAND --config my_vpns.json --verbose  # Custom config + logging"
    echo "  $COMMAND --demo --verbose --interval 3    # Verbose demo mode"
    echo ""
    echo -e "${YELLOW}ðŸŽ¯ DEMO MODE FEATURES:${NC}"
    echo "  âœ… Zero dependencies - no VPN setup required"
