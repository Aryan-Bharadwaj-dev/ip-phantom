        echo "  ./install.sh"
        echo "  # Then use: ip-rotator --demo (from anywhere!)"
    else
        echo -e "${YELLOW}ðŸŽ‰ GLOBAL INSTALLATION ACTIVE:${NC}"
        echo -e "  ${GREEN}You're using the global installation! Benefits:${NC}"
